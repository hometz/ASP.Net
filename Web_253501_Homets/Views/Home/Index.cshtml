@model Web_253501_Homets.Models.IndexViewModel


<h1>@ViewData["TitleText"]</h1>
<h2>Список</h2>
<ol>
    @for (int i = 0; i < Model.Items.Count; i++)
    {
        <li>@Model.Items[i].Name</li>
    }
</ol>

<hr />

<h2>Форма</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="SelectedId">Выберите элемент</label>
        <select asp-for="SelectedId" asp-items="ViewBag.SelectList" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Отправить</button>
</form>

<form method="post" asp-controller="Home" asp-action="Index">
    <div class="form-group">
        <label for="selectItem">Выберите элемент:</label>
        <select id="selectItem" name="selectedItem" asp-items="ViewBag.ListItems" class="form-control" style="margin-top: 10px;">
            <option value="">-- Выберите --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Чекбоксы:</label><br />
        <input type="checkbox" id="checkBox1" name="checkBox1" />
        <label for="checkBox1">Чек-бокс 1</label><br />
        <input type="checkbox" id="checkBox2" name="checkBox2" />
        <label for="checkBox2">Чек-бокс 2</label>
    </div>

    <div class="form-group">
        <label>Радио-кнопки:</label><br />
        <input type="radio" id="radio1" name="radioGroup" value="1" checked />
        <label for="radio1">Радио-1</label><br />
        <input type="radio" id="radio2" name="radioGroup" value="2" />
        <label for="radio2">Радио-2</label><br />
        <input type="radio" id="radio3" name="radioGroup" value="3" />
        <label for="radio3">Радио-3</label>
    </div>

    <div class="form-group">
        <label for="login">Логин:</label>
        <input type="text" id="login" name="login" class="form-control" placeholder="Введите имя" />
    </div>
    <div class="form-group">
        <label for="password">Пароль:</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Введите пароль" />
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Отправить</button>
</form>